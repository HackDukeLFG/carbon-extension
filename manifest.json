{
    "manifest_version": 3,
    "name": "Carbon Manager",
    "version": "1.0",
    "icons": {
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "https://developer.chrome.com/*",
      "*://*/*"
    ],
    "permissions": [
      "tabGroups"
    ],
    "content_scripts": [
      {
        "js": ["scripts/content.js"],
        "matches": [
          "https://*.amazon.com/*"
        ]
      }], "web_accessible_resources": [{
        "resources": ["main.js", "popup.js"],
        "matches": ["https://*.amazon.com/*"]
      }]
}